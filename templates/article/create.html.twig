{% extends 'base.html.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block body %}

{{ form_start(form) }}

<div class="flex flex-col justify-center items-center bg-white">

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block tracking-wide text-2xs mb-2 font-['Roboto-Light'] font-thin text-lime-700">
                Titre
            </label>
            {{ form_row(form.titre,{'label': ' ', 'attr': {'placeholder' : 'Titre ...'}})}}
        </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block tracking-wide text-2xs mb-2 font-['Roboto-Light'] font-thin text-lime-700">
                Contenu
            </label>
            {{ form_row(form.contenu,{'label': ' ', 'attr': {'placeholder' : 'Contenu ...'}})}}
        </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block tracking-wide text-2xs mb-2 font-['Roboto-Light'] font-thin text-lime-700">
                Image
            </label>
            {{ form_widget(form.image) }}
        </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block tracking-wide text-2xs mb-2 font-['Roboto-Light'] font-thin text-lime-700">
                Catégorie
            </label>
            {{ form_widget(form.category) }}
        </div>
    </div>

    <div class="flex fel-wrap justify-center px-3">
        <button id="validateUser" class="bg-[#84947B] text-white font-bold py-2 px-4 font-thin btn btn_success" type="submit">
            Créer
        </button>
    </div>
    <br>

</div>

{{ form_end(form) }}

{% endblock %}
